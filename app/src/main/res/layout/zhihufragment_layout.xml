<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/city_search_bg">
     <com.example.add.view.LoadMoreRecyclerView
         android:id="@+id/recy_zhihu"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
     </com.example.add.view.LoadMoreRecyclerView>

    <RelativeLayout
        android:id="@+id/rl_loading_zhihu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/iv_loading_zhihu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="5px"
            android:src="@drawable/anim_loading" />

        <TextView
            android:id="@+id/tv_loading_zhihu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_loading_zhihu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="努力加载中..."
            android:textColor="@android:color/black" />
    </RelativeLayout>

</RelativeLayout>


